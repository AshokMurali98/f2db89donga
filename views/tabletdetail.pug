extends layout
block content
 h1(class='container-fluid p-5 bg-sucess text-success text-center')= title
 if (toShow == null)
    h2 No instance details
 else
    - let tabletid = toShow._id
    - let tabletname = toShow.tablet_name
    - let companyname = toShow.company_name
    - let tabletdosage = toShow.tablet_dosage
    div(class='container-fluid p-5 bg-success text-dark text-center')
     div.row
        div(class='container-fluid p-2 flex-fill tabletAttr mr-3') Tablet ID is:
        div #{tabletid}
     div.row
        div(class='container-fluid p-2 flex-fill tabletAttr mr-3') Tablet Name is: 
        div #{tabletname} 
     div.row
        div(class='container-fluid p-2 flex-fill tabletAttr mr-3') Tablet Company is:
        div #{companyname} 
     div.row
        div(class='p-2 flex-fill tabletAttr mr-3') Tablet Dosage is: 
        div #{tabletdosage}